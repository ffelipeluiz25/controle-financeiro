<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Controle Financeiro</title>
    <link rel="stylesheet" type="text/css" href="https://printjs-4de6.kxcdn.com/print.min.css" />
    <script src="https://printjs-4de6.kxcdn.com/print.min.js"></script>
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
    @Styles.Render("~/Content/css")
</head>
<body class="sb-nav-fixed">
    <div class="page-preloader"></div>
    <div class="preloader">
        <div class="spinloader-box">
            <div class="spinloader-effect"></div>
        </div>
    </div>
    <nav class="sb-topnav navbar navbar-expand">
        <a class="navbar-brand ps-3"></a>
        <button class="btn btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i class="fi fi-rr-menu-burger"></i></button>
        <ul class="navbar-nav ms-auto me-0 me-md-3 my-2 my-md-0">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle user" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><label id="nomeUsuarioLoginSuperior">Luiz Felipe</label> <span><i class="fi fi-rr-user"></i></span></a>
                <ul id="ulNavbarDropdown" class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="/Perfil"><i class="fi fi-rr-user"></i> Meu perfil</a></li>
                    <li><a class="dropdown-item" href="/Configuracao"><i class="fi fi-rr-settings"></i> Configurações</a></li>
                    <li><hr class="dropdown-divider" /></li>
                    <li><a class="dropdown-item" href="/Login/Sair"><i class="fi fi-rr-exit"></i> Sair</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <a id="menuInicio" class="nav-link active" href="/Inicio">
                            <div class="sb-nav-link-icon"><i class="fi fi-rr-home"></i></div>
                            Início
                        </a>
                        <a id="menuReceitas" class="nav-link" href="/Receita" title="Receitas">
                            <div class="sb-nav-link-icon"><i class="fi fi-rr-memo"></i></div>
                            Receitas
                        </a>
                        <a id="menuDespesas" class="nav-link collapsed" title="Despesa" onclick="expandirMenuDespesa()">
                            <div class="sb-nav-link-icon"><i class="fi fi-rr-chart-histogram"></i></div>
                            Despesas
                            <div class="sb-sidenav-collapse-arrow"><i class="fi fi-rr-angle-small-down"></i></div>
                        </a>
                        <div class="collapse d-none" id="collapsePagesDespesaRecorrente">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a id="menuLancamentoDespesasRecorrentes" class="nav-link" href="/LancamentoDespesaRecorrente">Lançamento de Despesas Recorrentes</a>
                            </nav>
                        </div>
                        <div class="collapse d-none" id="collapsePagesDespesa">
                            <nav class="sb-sidenav-menu-nested nav">
                                <a id="menuLancamentoDespesas" class="nav-link" href="/LacamentoDespesa">Lançamento de Despesas</a>
                            </nav>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            @RenderBody()
        </div>
    </div>
    <script src="~/Scripts/addEventListeners.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/Scripts/scripts.js"></script>
    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/menuUsuarioDropDown.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
