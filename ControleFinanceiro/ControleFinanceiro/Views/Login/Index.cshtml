@model ControleFinanceiro.Data.DTOs.LoginDTO
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-6">
                        <div class="card shadow-lg border-0">
                            <div class="card-body p-5">
                                <h3 class="text-center font-weight-light mb-4">Área restrita</h3>
                                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                                {
                                    <div class="form-floating mb-3">
                                        <input class="form-control rounded-pill" id="inputEmail" name="Login" type="email" placeholder="name@example.com" />
                                        <label for="inputEmail">E-mail</label>
                                    </div>
                                    <div class="form-floating mb-3">
                                        <input class="form-control rounded-pill" id="inputPassword" name="Senha" type="password" placeholder="Password" />
                                        <label for="inputPassword">Senha</label>
                                    </div>
                                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                                    <div class="form-check mb-3 d-flex justify-content-between align-items-center">
                                        <div>
                                            <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                                            <label class="form-check-label" for="inputRememberPassword">Lembre de mim</label>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-between mt-4 mb-0 d-grid">
                                        <button type="submit" class="btn btn-primary rounded-pill w-100">Entrar</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>